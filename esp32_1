#include <WiFi.h>
#include <esp_wifi.h>
#include <esp_now.h>

// Настройки MAC (ДОЛЖНЫ СОВПАДАТЬ!)
const uint8_t RECEIVER_MAC[] = {0x02, 0xAA, 0xBB, 0xCC, 0xDD, 0xEE};    // Ваш MAC
const uint8_t TRANSMITTER_MAC[] = {0x02, 0x11, 0x22, 0x33, 0x44, 0x55}; // MAC передатчика

#define LED_PIN 5

void setup() {
  Serial.begin(115200);
  
  // 1. Инициализация WiFi
  WiFi.mode(WIFI_STA);
  
  // 2. Установка кастомного MAC
  if(esp_wifi_set_mac(WIFI_IF_STA, RECEIVER_MAC) != ESP_OK) {
    Serial.println("Ошибка установки MAC!");
    while(1) delay(100);
  }
  Serial.print("Установленный MAC приемника: ");
  Serial.println(WiFi.macAddress());

  // 3. Инициализация ESP-NOW
  if(esp_now_init() != ESP_OK) {
    Serial.println("Ошибка инициализации ESP-NOW");
    while(1) delay(100);
  }

  // 4. Регистрация callback
  esp_now_register_recv_cb([](const esp_now_recv_info_t *info, const uint8_t *data, int len) {
    if(memcmp(info->src_addr, TRANSMITTER_MAC, 6) == 0) {
      if(len > 0) {
        digitalWrite(LED_PIN, data[0]);
        Serial.print("Принятые данные: ");
        Serial.println(data[0]);
      }
    } else {
      Serial.println("Принято от неизвестного устройства!");
    }
  });

  // 5. Настройка светодиода
  pinMode(LED_PIN, OUTPUT);
}

void loop() {}
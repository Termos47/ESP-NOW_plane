#include <WiFi.h>
#include <esp_wifi.h>
#include <esp_now.h>

// Настройки MAC (ЗАМЕНИТЕ НА СВОИ!)
const uint8_t TRANSMITTER_MAC[] = {0x02, 0x11, 0x22, 0x33, 0x44, 0x55}; // Ваш MAC
const uint8_t RECEIVER_MAC[] = {0x02, 0xAA, 0xBB, 0xCC, 0xDD, 0xEE};    // MAC приемника

#define BUTTON_PIN 4
int lastButtonState = HIGH;

void setup() {
  Serial.begin(115200);
  
  // 1. Инициализация WiFi
  WiFi.mode(WIFI_STA);
  
  // 2. Установка кастомного MAC
  if(esp_wifi_set_mac(WIFI_IF_STA, TRANSMITTER_MAC) != ESP_OK) {
    Serial.println("Ошибка установки MAC!");
    while(1) delay(100);
  }
  Serial.print("Установленный MAC передатчика: ");
  Serial.println(WiFi.macAddress());

  // 3. Инициализация ESP-NOW
  if(esp_now_init() != ESP_OK) {
    Serial.println("Ошибка инициализации ESP-NOW");
    while(1) delay(100);
  }

  // 4. Настройка получателя
  esp_now_peer_info_t peerInfo;
  memcpy(peerInfo.peer_addr, RECEIVER_MAC, 6);
  peerInfo.channel = 0;
  peerInfo.encrypt = false;
  
  if(esp_now_add_peer(&peerInfo) != ESP_OK) {
    Serial.println("Ошибка добавления получателя");
    while(1) delay(100);
  }

  // 5. Настройка кнопки
  pinMode(BUTTON_PIN, INPUT_PULLUP);
}

void loop() {
  int currentState = digitalRead(BUTTON_PIN);
  
  if(currentState != lastButtonState) {
    delay(50); // Антидребезг
    currentState = digitalRead(BUTTON_PIN);
    
    if(currentState != lastButtonState) {
      uint8_t data = currentState == LOW ? 1 : 0;
      esp_err_t result = esp_now_send(RECEIVER_MAC, &data, 1);
      
      Serial.println(result == ESP_OK ? "Отправлено" : "Ошибка отправки");
      lastButtonState = currentState;
    }
  }
}